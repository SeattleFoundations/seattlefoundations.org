---
export const prerender = true;

import BaseLayout from "@layouts/BaseLayout.astro";

const meta = {
	title: "Membership | Seattle Foundations",
	description: "Join our membership program and become part of the Seattle startup community.",
};
---

<BaseLayout {...meta}>
	<section class="py-16 md:py-24">
		<div class="site-container">
			<div class="mx-auto max-w-3xl">
				<h1 class="h1 text-center">Membership</h1>
				<div class="mt-12 bg-white rounded-xl p-4 md:p-6 shadow-sm">
					<iframe id="membership-frame" src="https://hill-newsprint-479.notion.site/ebd/1cebcd8b70e4807fa622d2b65bc46ba0" width="100%" height="2500" frameborder="0" allowfullscreen />
				</div>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	iframe {
		border: none;
		border-radius: 0.5rem;
		background-color: white;
	}
</style>