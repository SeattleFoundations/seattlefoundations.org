---
import BaseLayout from "@layouts/BaseLayout.astro";

const meta = {
	title: "Membership | Seattle Foundations",
	description: "Join our membership program and become part of the Seattle startup community.",
};
---

<BaseLayout {...meta}>
	<section class="py-16 md:py-24">
		<div class="site-container">
			<div class="mx-auto max-w-3xl">
				<h1 class="h1 text-center">Membership</h1>
				<div class="mt-12">
					<iframe
						data-tally-src="https://tally.so/embed/wAWAyk?hideTitle=1&transparentBackground=1&dynamicHeight=1&originPage=srcdoc"
						width="100%"
						height="100"
						frameborder="0"
						marginheight="0"
						marginwidth="0"
						title="Membership Form"
					></iframe>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>

<script>
	// Load Tally script
	const loadTally = () => {
		const script = document.createElement("script");
		script.src = "https://tally.so/widgets/embed.js";
		script.async = true;
		document.body.appendChild(script);
	};

	// Load Tally when the page loads
	window.addEventListener("load", loadTally);
</script>

<style>
	iframe {
		min-height: 600px; /* Provide a minimum height while form loads */
	}
</style>