---
import BaseLayout from "@layouts/BaseLayout.astro";
import { MembershipApplicationForm } from "@components/Forms/MembershipApplicationForm";

const meta = {
	title: "Membership | Seattle Foundations",
	description: "Join our membership program and become part of the Seattle startup community.",
};
---

<BaseLayout {...meta}>
	<section class="site-container">
		<div
			class="overflow-x-clip bg-[url('/assets/pattern-light.svg')] bg-center bg-no-repeat pt-24 pb-12 md:pt-32 md:pb-16 dark:bg-none"
		>
			<div class="mx-auto flex max-w-[950px] flex-col justify-center text-center">
				<h1 class="h1">Join Foundations</h1>
				<p class="description mt-4 text-lg">
					Apply to become a member.
				</p>
			</div>
		</div>
		<div class="mx-auto max-w-2xl pb-16 md:pb-24">
			<div class="bg-card text-card-foreground rounded-xl p-6 md:p-8 shadow-sm">
				<MembershipApplicationForm client:load />
			</div>
		</div>
	</section>
</BaseLayout>
