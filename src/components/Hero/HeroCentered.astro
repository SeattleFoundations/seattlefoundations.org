---
/**
 * * Hero centered with video button
 *
 * There is a commented out "awards" section below in case you want that
 */
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";
import VideoButton from "@components/Button/VideoButton.astro";

// images
import person1 from "@images/people/john.jpeg";
import person3 from "@images/people/shawn.jpeg";
import person2 from "@images/people/shivaas.jpeg";
---

<section
	id="hero-center"
	class="mt-20 overflow-x-clip bg-[url('/assets/pattern-light-big.svg')] bg-center bg-no-repeat dark:bg-none"
>
	<div class="site-container mx-auto px-4 pt-10 pb-20">
		<!-- alter the max-w-[750px] here until your text looks nice on large screens -->
		<div class="mx-auto mb-16 flex w-full max-w-[750px] flex-col justify-center px-4 text-center">
			<div data-aos-trigger="#hero-center">
				<!-- <span
					class="bg-base-600/70 mb-4 inline-flex items-center rounded-full px-2 py-px text-xs leading-5 text-white uppercase"
				>
					Meet Foundations
				</span> -->

				<h1
					class="text-base-900 dark:text-base-100 mt-8 mb-6 text-3xl leading-tight font-semibold tracking-tight text-pretty md:mt-18 lg:text-5xl lg:leading-tight"
				>
					Building the Foundations of Seattleâ€™s Startups
				</h1>
			</div>
			<p class="description mb-10 text-lg text-pretty lg:text-xl">
				A member-owned community of tech founders in Seattle
			</p>
			<div class="flex flex-wrap justify-center gap-4">
				<Button
					variant="primary"
					href="https://cosmicthemes.com/themes/atlas/"
					target="_blank"
					rel="noopener noreferrer"
				>
					Join the Community
				</Button>
				<!-- <VideoButton data-aos="fade-right" data-aos-delay=".2" data-aos-trigger="#hero-center" /> -->
			</div>

			<!-- social proof -->
			<div class="mx-auto mt-8 flex max-w-md justify-center">
				<div class="-m-1.5 flex flex-wrap items-center">
					<div class="w-auto p-1.5">
						<div class="flex flex-wrap">
							<div
								class="border-primary-500 bg-primary-500 aspect-square size-10 overflow-hidden rounded-full border-2"
							>
								<Image
									src={person1}
									class="object-cover"
									alt="reader"
									loading="eager"
									width={100}
								/>
							</div>
							<div
								class="border-primary-500 bg-primary-500 -ml-5 aspect-square size-10 overflow-hidden rounded-full border-2"
							>
								<Image
									src={person2}
									class="object-cover"
									alt="reader"
									loading="eager"
									width={100}
								/>
							</div>
							<div
								class="border-primary-500 bg-primary-500 -ml-5 aspect-square size-10 overflow-hidden rounded-full border-2"
							>
								<Image
									src={person3}
									class="object-cover"
									alt="reader"
									loading="eager"
									width={100}
								/>
							</div>
						</div>
					</div>
					<div class="flex-1 p-1.5 text-left">
						<p class="description text-sm leading-tight tracking-tight">
							200+ of the best Seattle founders in the community
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
