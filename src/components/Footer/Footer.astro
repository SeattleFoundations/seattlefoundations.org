---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Image } from "astro:assets";
// components
import FooterLink from "@components/Footer/FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import Button from "@components/Button/Button.astro";
import SocialIcon from "@components/SocialIcon/SocialIcon.astro";

import stifelLogo from "@images/sponsors/Stifel.png";
import wilsonSonsiniLogo from "@images/sponsors/WilsonSonsini.png";
import parcionLogo from "@images/sponsors/parcion.png";

const sponsorData = [
	{
		logo: stifelLogo,
		alt: "Stifel",
		link: "https://bankwithstifel.com/",
	},
	{
		logo: wilsonSonsiniLogo,
		alt: "Wilson Sonsini",
		link: "https://www.wsgr.com/en/",
	},
	{
		logo: parcionLogo,
		alt: "Parcion",
		link: "https://parcionpw.com/",
	},
];
const today = new Date();
---

<footer class="text-base-500 overflow-x-clip pt-20 pb-16 font-medium">
	<div class="site-container">
		<div class="mt-6 flex flex-col items-center gap-6 md:flex-row md:justify-between">
			<SiteLogo />
			<div class="flex flex-col items-center gap-2 md:flex-row md:items-center md:gap-x-4">
				<span class="font-bold">More Cool Stuff:</span>
				<div class="flex gap-x-4">
					<FooterLink href="/almost-live">Almost Live!</FooterLink>
					<FooterLink href="/blog">Blog</FooterLink>
					<FooterLink href="https://merch.seattlefoundations.org/" newTab>Merch</FooterLink>
				</div>
			</div>
		</div>
	</div>
	<div class="border-t-base-200/50 text-base-400 mt-6 border-t text-sm">
		<div class="site-container mt-6 flex flex-wrap justify-between gap-6">
			<div class="my-auto">
				&copy; {today.getFullYear()}
				{" "}
				Foundations
			</div>
			<div class="flex gap-4">
				{
					sponsorData.map((sponsor) => (
						<a href={sponsor.link} target="_blank" rel="noopener noreferrer">
							<Image
								src={sponsor.logo}
								alt={sponsor.alt}
								width={200}
								class="max-h-8 object-contain grayscale transition-all hover:grayscale-0 dark:invert"
							/>
						</a>
					))
				}
			</div>
			<!-- Socials -->
			<div class="flex flex-col">
				<div class="flex gap-4">
					<SocialIcon
						href="https://www.linkedin.com/company/foundations-seattle"
						icon="tabler/brand-linkedin"
						social="linkedin"
					/>
					<SocialIcon
						href="https://www.youtube.com/@SeattleFoundations"
						icon="tabler/brand-youtube"
						social="youtube"
					/>
				</div>
			</div>
		</div>
	</div>
</footer>
