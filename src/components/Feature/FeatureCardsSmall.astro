---
/**
 * * Bento-style feature cards - Bay Area Standard
 * Features displayed in a modern bento grid layout with variable tile sizes
 */

// components
import FeatureCard from "@components/FeatureCard/FeatureCardSmall.astro";
import Button from "@components/Button/Button.astro";

interface FeatureData {
	icon: string;
	title: string;
	text: string;
}

// data
const featureData: FeatureData[] = [
	{
		icon: "tabler/affiliate",
		title: "Networking",
		text: `Instantly connect with Seattle's top investors, founders, and startups all in one place.`,
	},
	{
		icon: "tabler/bolt",
		title: "Energy",
		text: `Work alongside the most ambitious founders and builders in the region.`,
	},
	{
		icon: "tabler/load-balancer",
		title: "Flexibility",
		text: `Engage with the community at the pace that matches your stage in the startup journey.`,
	},
];
---

<section
	id="feature-cards-small"
	class="relative pt-24 pb-12 md:pt-32 md:pb-16"
>
	<!-- Subtle background gradient -->
	<div class="pointer-events-none absolute inset-0 -z-10">
		<div
			class="absolute top-0 left-1/2 h-[600px] w-full max-w-4xl -translate-x-1/2 opacity-[0.04] blur-[100px]"
			style="background: radial-gradient(ellipse, var(--color-primary-400) 0%, transparent 70%);"
		></div>
	</div>

	<div class="site-container relative">
		<!-- Section header -->
		<div class="bento-animate mx-auto mb-16 max-w-2xl text-center opacity-0" style="--delay: 0ms;">
			<h2
				class="h2 mb-4"
				style="letter-spacing: -0.02em;"
			>
				We help founders thrive in Seattle
			</h2>
			<p class="description text-lg text-pretty md:text-xl">
				We're on a mission to make Seattle a better place to be a founder. We do that by creating a vibrant, interconnected network of experienced founders, first-timers,
				and established leaders.
			</p>
			<div class="mt-6 flex flex-wrap justify-center gap-4">
				<Button
					variant="primary"
					href="/static/manifesto"
					class="shadow-lg shadow-primary-500/20 hover:shadow-xl hover:shadow-primary-500/30 transition-shadow duration-300"
				>
					Read the Manifesto
				</Button>
			</div>
		</div>

		<!-- Bento Grid -->
		<div
			id="trigger-small-cards"
			class="grid grid-cols-1 gap-4 md:grid-cols-3 md:gap-5 lg:gap-6"
		>
			{
				featureData.map((feature, idx) => (
					<div
						class="bento-animate opacity-0"
						style={`--delay: ${(idx + 1) * 100}ms;`}
					>
						<FeatureCard
							title={feature.title}
							text={feature.text}
							icon={feature.icon}
						/>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	/* Bento animation styles */
	.bento-animate {
		animation: bentoFadeIn 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
		animation-delay: var(--delay, 0ms);
	}

	@keyframes bentoFadeIn {
		from {
			opacity: 0;
			transform: translateY(24px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Respect reduced motion preference */
	@media (prefers-reduced-motion: reduce) {
		.bento-animate {
			animation: none;
			opacity: 1;
		}
	}
</style>
